<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.varyvoda.matvey.averagek.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Canvas fx:id="canvas" height="500.0" width="500.0" />
   <HBox alignment="CENTER">
      <children>
          <Button onAction="#onHelloButtonClick" text="Draw">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Button>
         <TextField fx:id="ratio" prefHeight="26.0" prefWidth="70.0" promptText="Ratio">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </TextField>
         <TextField fx:id="stepMs" prefHeight="26.0" prefWidth="70.0" promptText="Step, ms">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </TextField>
      </children>
   </HBox>
</VBox>
